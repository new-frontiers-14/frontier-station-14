<BoxContainer
    HorizontalExpand="True"
    Orientation="Vertical"
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <BoxContainer Margin="0,1" Orientation="Vertical">
        <BoxContainer Orientation="Horizontal">
            <Label
                HorizontalAlignment="Left"
                HorizontalExpand="True"
                Name="GasLabel"
                Text="{Loc 'supermatter-console-window-label-gas'}" />
            <BoxContainer
                Orientation="Horizontal"
                SetHeight="24"
                SetWidth="180">
                <PanelContainer
                    HorizontalExpand="True"
                    Margin="0,0,4,0"
                    Name="GasBarBorder">
                    <ProgressBar
                        Margin="1"
                        MaxValue="100"
                        MinValue="0"
                        Name="GasBar">
                        <Label
                            HorizontalAlignment="Right"
                            Margin="0,0,4,0"
                            Name="GasBarLabel" />
                    </ProgressBar>
                </PanelContainer>
                <Button
                    Margin="-1"
                    Name="GasButton"
                    SetWidth="27"
                    StyleClasses="ButtonSquare">
                    <TextureRect
                        Margin="-8,-2,0,0"
                        Name="GasButtonArrow"
                        TexturePath="/Textures/_EE/Interface/Supermatter/arrow_down.png"
                        VerticalAlignment="Center" />
                </Button>
            </BoxContainer>
        </BoxContainer>

        <BoxContainer
            Margin="16,2,0,0"
            Name="DetailsContainer"
            Orientation="Vertical"
            Visible="False">
            <BoxContainer HorizontalExpand="True" Orientation="Horizontal">
                <Label Name="HeaderLabel" Text="{Loc 'supermatter-console-window-label-details'}" />
            </BoxContainer>
            <BoxContainer
                HorizontalExpand="True"
                Name="TransmitContainer"
                Orientation="Horizontal">
                <Label
                    HorizontalExpand="True"
                    Name="TransmitLabel"
                    Text="{Loc 'supermatter-console-window-label-gas-transmit'}" />
                <Label HorizontalAlignment="Right" Name="TransmitInfoLabel" />
            </BoxContainer>
            <BoxContainer
                HorizontalExpand="True"
                Name="WasteContainer"
                Orientation="Horizontal">
                <Label
                    HorizontalExpand="True"
                    Name="WasteLabel"
                    Text="{Loc 'supermatter-console-window-label-gas-waste'}" />
                <Label HorizontalAlignment="Right" Name="WasteInfoLabel" />
            </BoxContainer>
            <BoxContainer
                HorizontalExpand="True"
                Name="PowerContainer"
                Orientation="Horizontal">
                <Label
                    HorizontalExpand="True"
                    Name="PowerLabel"
                    Text="{Loc 'supermatter-console-window-label-gas-power'}" />
                <Label HorizontalAlignment="Right" Name="PowerInfoLabel" />
            </BoxContainer>
            <BoxContainer
                HorizontalExpand="True"
                Name="HeatContainer"
                Orientation="Horizontal">
                <Label
                    HorizontalExpand="True"
                    Name="HeatLabel"
                    Text="{Loc 'supermatter-console-window-label-gas-heat'}" />
                <Label HorizontalAlignment="Right" Name="HeatInfoLabel" />
            </BoxContainer>
        </BoxContainer>
    </BoxContainer>

</BoxContainer>
