<DefaultWindow xmlns="https://spacestation14.io"
               Title="{Loc 'cryo-wakeup-window-title'}">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Vertical" Align="Center">
            <RichTextLabel Name="Label" HorizontalExpand="True" MaxWidth="300"/>
            <BoxContainer Orientation="Horizontal" Align="Center">
                <Button Name="AcceptButton" Text="{Loc 'cryo-wakeup-window-accept-button'}"/>
                <Control MinSize="20 0"/>
                <Button Name="DenyButton" Text="{Loc 'cryo-wakeup-window-deny-button'}"/>
            </BoxContainer>
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
