<PanelContainer xmlns="https://spacestation14.io"
                MinWidth="280">
    <BoxContainer Orientation="Horizontal"
                  HorizontalExpand="True">
        <BoxContainer Orientation="Horizontal"
                      SetWidth="140"
                      Align="Center">
            <TextureRect Name="Icon"
                         Access="Public"
                         MinSize="32 32"
                         RectClipContent="True" />
            <Label Name="Title"
                   Access="Public"
                   HorizontalExpand="True" />
        </BoxContainer>
        <Label Name="Quantity"
               Access="Public"
               Align="Center"
               SetWidth="140" />
        <Label Name="Price"
               Access="Public"
               Align="Center"
               SetWidth="60" />
        <Button Name="AddToCart"
                Access="Public"
                ToolTip=""
                SetWidth="140"
                Text="{Loc 'market-add-to-cart-button'}"
                StyleClasses="LabelSubText" />
    </BoxContainer>
</PanelContainer>
